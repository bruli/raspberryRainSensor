{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/bruli/raspberryRainSensor/internal/infra/http/schemas/rain_response.json",
  "type": "object",
  "title": "Rain response",
  "description": "This schema defines the response to read rain",
  "properties": {
    "value": {
      "type": "integer"
    },
    "is_raining": {
      "type": "boolean"
    }
  },
  "required": ["value", "is_raining"],
  "examples": [
    {
      "value": 1023,
      "is_raining": true
    }
  ]
}